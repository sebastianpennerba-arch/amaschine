<script>
// =====================================================
// SIGNALONE - ELITE JAVASCRIPT
// =====================================================

const AppState = {
  theme: localStorage.getItem('signalOneTheme') || 'light',
  sidebarCollapsed: localStorage.getItem('sidebarCollapsed') === 'true',
  currentView: 'dashboard',
  connections: {
    meta: false,
    google: false,
    tiktok: false
  },
  mockData: {
    creatives: [
      {
        id: 'c1',
        name: 'UGC Hook – Unboxing Reel',
        platform: 'Meta',
        roas: 3.8,
        ctr: 2.7,
        spend: 222,
        revenue: 846,
        format: '9:16'
      },
      {
        id: 'c2',
        name: 'Static – Hero Product Shot',
        platform: 'Meta',
        roas: 3.2,
        ctr: 2.1,
        spend: 142,
        revenue: 454,
        format: '1:1'
      },
      {
        id: 'c3',
        name: 'Carousel – 5 Benefits',
        platform: 'Google',
        roas: 2.1,
        ctr: 1.2,
        spend: 428,
        revenue: 900,
        format: '1:1'
      },
      {
        id: 'c4',
        name: 'Video – Problem/Solution',
        platform: 'Meta',
        roas: 1.5,
        ctr: 3.1,
        spend: 414,
        revenue: 621,
        format: '16:9'
      },
      {
        id: 'c5',
        name: 'Static – Testimonial Card',
        platform: 'Meta',
        roas: 4.5,
        ctr: 1.9,
        spend: 287,
        revenue: 1292,
        format: '4:5'
      }
    ]
  }
};

// Initialize
document.addEventListener('DOMContentLoaded', () => {
  initTheme();
  initSidebar();
  initNavigation();
  initMobileMenu();
  initChart();
  renderCreatives();
  updateConnectionStatus();
});

// Theme Management
function initTheme() {
  document.documentElement.setAttribute('data-theme', AppState.theme);
  
  document.getElementById('themeToggle').addEventListener('click', () => {
    AppState.theme = AppState.theme === 'light' ? 'dark' : 'light';
    localStorage.setItem('signalOneTheme', AppState.theme);
    document.documentElement.setAttribute('data-theme', AppState.theme);
    showToast(`Theme switched to ${AppState.theme} mode`);
  });
}

// Sidebar Management
function initSidebar() {
  const sidebar = document.getElementById('sidebar');
  const mainContainer = document.getElementById('mainContainer');
  const toggle = document.getElementById('sidebarToggle');
  
  if (AppState.sidebarCollapsed) {
    sidebar.classList.add('collapsed');
    mainContainer.classList.add('sidebar-collapsed');
  }
  
  toggle.addEventListener('click', () => {
    AppState.sidebarCollapsed = !AppState.sidebarCollapsed;
    localStorage.setItem('sidebarCollapsed', AppState.sidebarCollapsed);
    sidebar.classList.toggle('collapsed');
    mainContainer.classList.toggle('sidebar-collapsed');
  });
}

// Navigation
function initNavigation() {
  const navItems = document.querySelectorAll('.nav-item');
  
  navItems.forEach(item => {
    item.addEventListener('click', (e) => {
      e.preventDefault();
      const viewName = item.getAttribute('data-view');
      switchView(viewName);
      
      // Close mobile menu if open
      if (window.innerWidth <= 1024) {
        closeMobileMenu();
      }
    });
  });
}

function switchView(viewName) {
  // Update active nav item
  document.querySelectorAll('.nav-item').forEach(item => {
    item.classList.toggle('active', item.getAttribute('data-view') === viewName);
  });
  
  // Update views
  document.querySelectorAll('.view').forEach(view => {
    view.classList.remove('active');
  });
  document.getElementById(`${viewName}View`).classList.add('active');
  
  // Update page title
  const titles = {
    dashboard: 'Dashboard',
    creatives: 'Creatives',
    campaigns: 'Campaigns',
    insights: 'Insights',
    library: 'Library',
    reports: 'Reports',
    connections: 'Connections'
  };
  
  const metas = {
    dashboard: 'Real-time performance overview',
    creatives: 'Manage and analyze your creative assets',
    campaigns: 'Campaign performance and management',
    insights: 'AI-powered performance insights',
    library: 'Central asset repository',
    reports: 'Custom performance reports',
    connections: 'Platform integrations'
  };
  
  document.getElementById('pageTitle').textContent = titles[viewName] || viewName;
  document.getElementById('pageMeta').textContent = metas[viewName] || '';
  
  AppState.currentView = viewName;
  
  // Show loading effect
  showLoading();
  setTimeout(hideLoading, 300);
}

// Mobile Menu
function initMobileMenu() {
  const mobileToggle = document.getElementById('mobileMenuToggle');
  const mobileOverlay = document.getElementById('mobileOverlay');
  const sidebar = document.getElementById('sidebar');
  
  mobileToggle.addEventListener('click', () => {
    sidebar.classList.add('mobile-open');
    mobileOverlay.classList.add('active');
  });
  
  mobileOverlay.addEventListener('click', closeMobileMenu);
}

function closeMobileMenu() {
  document.getElementById('sidebar').classList.remove('mobile-open');
  document.getElementById('mobileOverlay').classList.remove('active');
}

// Chart
let performanceChart = null;

function initChart() {
  const ctx = document.getElementById('performanceChart');
  if (!ctx) return;
  
  const data = {
    labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
    datasets: [
      {
        label: 'Revenue',
        data: [1020, 1150, 980, 1400, 1550, 1300, 1650],
        borderColor: '#0066FF',
        backgroundColor: 'rgba(0,102,255,0.1)',
        fill: true,
        tension: 0.4
      },
      {
        label: 'Spend',
        data: [280, 310, 270, 350, 380, 320, 400],
        borderColor: '#6B6B6B',
        backgroundColor: 'rgba(107,107,107,0.1)',
        fill: true,
        tension: 0.4
      }
    ]
  };
  
  performanceChart = new Chart(ctx, {
    type: 'line',
    data: data,
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          position: 'top',
          align: 'end'
        }
      },
      scales: {
        y: {
          beginAtZero: true,
          grid: {
            color: 'rgba(0,0,0,0.05)'
          }
        },
        x: {
          grid: {
            display: false
          }
        }
      }
    }
  });
}

// Render Creatives
function renderCreatives() {
  const container = document.getElementById('creativesGrid');
  if (!container) return;
  
  container.innerHTML = '';
  
  AppState.mockData.creatives.forEach(creative => {
    const card = document.createElement('div');
    card.className = 'card creative-card';
    card.onclick = () => showCreativeModal(creative.name);
    
    card.innerHTML = `
      <div class="creative-preview">
        <div class="platform-badge">${creative.platform}</div>
      </div>
      <div class="creative-title">${creative.name}</div>
      <div class="creative-metrics">
        <div>
          <div class="creative-metric-label">ROAS</div>
          <div class="creative-metric-value success">${creative.roas.toFixed(1)}x</div>
        </div>
        <div>
          <div class="creative-metric-label">CTR</div>
          <div class="creative-metric-value">${creative.ctr.toFixed(1)}%</div>
        </div>
        <div>
          <div class="creative-metric-label">Spend</div>
          <div class="creative-metric-value">€${creative.spend}</div>
        </div>
        <div>
          <div class="creative-metric-label">Revenue</div>
          <div class="creative-metric-value">€${creative.revenue}</div>
        </div>
      </div>
    `;
    
    container.appendChild(card);
  });
}

// Search & Sort
document.getElementById('creativeSearch')?.addEventListener('input', (e) => {
  const search = e.target.value.toLowerCase();
  document.querySelectorAll('.creative-card').forEach(card => {
    const title = card.querySelector('.creative-title').textContent.toLowerCase();
    card.style.display = title.includes(search) ? 'block' : 'none';
  });
});

document.getElementById('creativeSort')?.addEventListener('change', (e) => {
  showToast(`Sorting by: ${e.target.options[e.target.selectedIndex].text}`);
});

document.getElementById('campaignSearch')?.addEventListener('input', (e) => {
  const search = e.target.value.toLowerCase();
  document.querySelectorAll('#campaignsTable tr').forEach(row => {
    const text = row.textContent.toLowerCase();
    row.style.display = text.includes(search) ? 'table-row' : 'none';
  });
});

// View Toggle
document.querySelectorAll('.view-toggle-btn').forEach(btn => {
  btn.addEventListener('click', () => {
    document.querySelectorAll('.view-toggle-btn').forEach(b => b.classList.remove('active'));
    btn.classList.add('active');
    showToast(`View mode: ${btn.textContent}`);
  });
});

// Connections
function updateConnectionStatus() {
  const metaStatus = document.getElementById('metaStatus');
  const connectionStatus = document.getElementById('connectionStatus');
  const connectionText = document.getElementById('connectionText');
  
  if (AppState.connections.meta) {
    metaStatus?.classList.remove('disconnected');
    connectionStatus?.classList.remove('disconnected');
    connectionText.textContent = 'Connected';
  } else {
    metaStatus?.classList.add('disconnected');
    connectionStatus?.classList.add('disconnected');
    connectionText.textContent = 'Disconnected';
  }
}

function connectPlatform(platform) {
  const btn = document.getElementById(`${platform}ConnectBtn`);
  if (!btn) return;
  
  btn.textContent = 'Connecting...';
  btn.disabled = true;
  
  setTimeout(() => {
    AppState.connections[platform] = true;
    updateConnectionStatus();
    btn.textContent = 'Connected';
    showToast(`Successfully connected to ${platform.charAt(0).toUpperCase() + platform.slice(1)} Ads`);
  }, 1500);
}

// Modal
function showCreativeModal(name) {
  const modal = document.getElementById('modal');
  document.getElementById('modalTitle').textContent = name;
  document.getElementById('modalBody').innerHTML = `
    <div style="margin-bottom: 16px;">
      <strong>Performance Metrics</strong>
      <div style="margin-top: 12px; display: grid; gap: 12px;">
        <div style="display: flex; justify-content: space-between;">
          <span class="text-secondary">Format:</span>
          <strong>9:16</strong>
        </div>
        <div style="display: flex; justify-content: space-between;">
          <span class="text-secondary">Platform:</span>
          <strong>Meta</strong>
        </div>
        <div style="display: flex; justify-content: space-between;">
          <span class="text-secondary">Status:</span>
          <span class="status-badge active">Active</span>
        </div>
      </div>
    </div>
    <div style="padding-top: 16px; border-top: 1px solid var(--border);">
      <p class="text-secondary">This creative is performing excellently with a ROAS above target. Consider scaling budget allocation.</p>
    </div>
  `;
  modal.classList.add('active');
}

function showCampaignModal(name) {
  const modal = document.getElementById('modal');
